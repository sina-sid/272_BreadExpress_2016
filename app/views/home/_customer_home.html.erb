<div class="row">
  <div class="card">
	<div class="image">
	  <%= image_tag "title.jpg" %>
	  <span class="title"><h1 style="color:white;">
	    <%= "Welcome back, #{current_user.customer.first_name}!"%></h1></span>
	</div>
  </div>


</div>

<div class="row"><br>
  <h2>Newest Additions</h2><br>
  <% @newest_items.each do |item| %>
  <div class="small-3 columns">
    <div class="card">
	  <div class="image">
		<%= link_to image_tag(item.photo), item_path(item) %></div>
	  <div class="content">
	    <%= item.name %>
	  </div>
	</div>
  </div>
  <% end %>
</div>
