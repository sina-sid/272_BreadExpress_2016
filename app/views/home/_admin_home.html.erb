

<div class="row"><br>
  <h2>Newest Additions</h2><br>
  <% @newest_items.each do |item| %>
  <div class="small-3 columns">
    <div class="card">
	  <div class="image">
		<%= link_to image_tag(item.photo), item_path(item) %></div>
	  <div class="content">
	    <%= item.name %>
	  </div>
	</div>
  </div>
  <% end %>
</div>
