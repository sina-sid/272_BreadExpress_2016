<% if @cart_order_items.empty? %>
  <p><em>There are no items in your cart.</em></p>
<% else %>
<h2>Cart</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>&nbsp;</th>
      <th>Name</th>
      <th>Units</th>
      <th>Price</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_order_items.each do |order_item| %>
      <tr>
        <td><%= image_tag(order_item.item.photo, width: 50) %>
        <td><%= order_item.item.name %></td>
        <td>
          <%= order_item.quantity %>
        </td>
        <td><%= number_to_currency order_item.item.current_price %></td>      
        <td>
          <%= link_to(remove_from_cart_path(order_item.item.id), method: 'get', class: 'button radius alert') do %>
            <!-- <i class="fa fa-trash-o"></i> -->
            &nbsp;<%= "Remove" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<p>&nbsp;</p>