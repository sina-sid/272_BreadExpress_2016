<%= simple_form_for @order, html: { class: 'form-horizontal' } do |f| %>
  <fieldset>
    <legend>Checkout</legend>

    <%= f.input :address_id, collection: get_customer_addresses, include_blank: true, input_html: {class: "avg"} %>
    <%= f.input :credit_card_number, input_html: {class: "avg"} %>
    <%= f.input :expiration_year, input_html: {class: "avg"} %>
    <%= f.input :expiration_month, input_html: {class: "avg"} %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', cart_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>