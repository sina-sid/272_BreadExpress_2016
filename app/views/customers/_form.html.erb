<%= simple_form_for @customer, html: { class: 'form-horizontal' } do |f| %>
  <fieldset>
    <h4><%= controller.action_name.capitalize %> Customer</h4>

    <%= f.input :first_name, input_html: {class: "avg"} %>
    <%= f.input :last_name, input_html: {class: "avg"} %>
    <%= f.input :email, input_html: {class: "avg"} %>
    <%= f.input :phone, input_html: {class: "avg"} %>
    <%= f.input :active %>

    <div><br>
      <%= f.submit nil, :class => 'waves-effect waves-light btn' %>
      <%= link_to 'Cancel', customers_path, :class => 'waves-effect waves-light btn red' %>
    </div>
  </fieldset>
<% end %>
