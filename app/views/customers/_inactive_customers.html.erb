<% if @inactive_customers.empty? %>
  <p><em>No inactive customers at this time.</em></p>
<% else %>
  <div class="panel callout radius">
    <h3>Inactive Customers</h3>
    <ul>
      <% @inactive_customers.each do |customer| %>
        <li><%= link_to customer.name, customer_path(customer) %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div>
  <%= link_to(new_customer_path, class: "waves-effect waves-light btn red") do %>
    &nbsp;Add New Customer
  <% end %>
</div>
