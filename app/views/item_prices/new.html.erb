<div class="row">
  <div class="small-8 columns">
    <%= simple_form_for @item_price, html: { class: 'form-horizontal'} do |f| %>
      <fieldset>
        <legend>Add a New Price</legend>

        <%= f.input :item_id, collection: Item.alphabetical, include_blank: true, input_html: {class: "avg"} %>
        <%= f.input :price, input_html: {class: "avg"} %>
        <%# f.input :start_date, as: :string, disbled: true, input_html: { class: "avg" } %>

        <div class="form-actions">
          <%= f.submit nil, :class => 'button radius' %>
          <%= link_to 'Cancel', items_path, :class => 'button alert radius' %>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>