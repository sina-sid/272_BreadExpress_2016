module Contexts
  module AddressContexts

  	def create_addresses
  	  @abc_address = FactoryGirl.create(:address, customer: @abc)
      # @cindy_address = FactoryGirl.create(:adress, customer: @cindy, )
      # @bob = FactoryGirl.create(:customer, first_name: "Bob", last_name: "By", email: "bobby@example.com", active: false)
      # @rob = FactoryGirl.create(:customer, first_name: "Rob", last_name: "Bery", email: "robbery@example.com", active: false)
  	end

  	def remove_addresses
  	  @abc_address.delete
      # @cindy.delete
      # @bob.delete
      # @rob.delete
  	end

  end
end